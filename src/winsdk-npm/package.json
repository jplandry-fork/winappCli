{
  "name": "windows-sdks",
  "version": "1.0.0",
  "description": "Windows SDK and BuildTools utilities for Node.js native addon development",
  "main": "index.js",
  "bin": {
    "winsdk": "./cli.js"
  },
  "scripts": {
    "setup": "node cli.js setup",
    "test": "node examples/test-buildtools.js",
    "build": "npm run build-x64 && npm run build-arm64",
    "build-x64": "dotnet publish ../winsdk-CLI/Winsdk.Cli/Winsdk.Cli.csproj -c Release -r win-x64 --self-contained -o bin/win-x64",
    "build-arm64": "dotnet publish ../winsdk-CLI/Winsdk.Cli/Winsdk.Cli.csproj -c Release -r win-arm64 --self-contained -o bin/win-arm64",
    "clean": "node -e \"require('fs').rmSync('bin', {recursive: true, force: true})\"",
    "postinstall": "node -e \"console.log('\\\\nðŸŽ‰ Windows SDK utilities installed successfully!\\\\n\\\\nGet started with: npx winsdk --help\\\\n')\""
  },
  "keywords": [
    "windows",
    "sdk",
    "buildtools",
    "nuget",
    "cppwinrt",
    "windows-app-sdk",
    "native-addon"
  ],
  "author": "Nikola Metulev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/winsdk.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "os": [
    "win32"
  ],
  "dependencies": {},
  "devDependencies": {},
  "files": [
    "index.js",
    "cli.js",
    "buildtools-utils.js",
    "msix-utils.js",
    "winsdk-cli-utils.js",
    "addon-utils.js",
    "addon-template/",
    "utils.js",
    "bin/**/*.exe",
    "README.md",
    "LICENSE"
  ]
}
